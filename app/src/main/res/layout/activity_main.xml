<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_bg_c"
    tools:context="com.example.a1.verificationcode.MainActivity">


    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/train_title_cover"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:layout_marginBottom="20dp"
        android:src="@drawable/title_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fetch_ticket"
        app:viewAspectRatio="1"
        android:background="@drawable/fetch_ticket"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/cover_button"
        android:text="开 始 抢 票 "
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:background="@drawable/selector_cover_button"
        android:layout_width="150dp"
        android:layout_height="60dp" />


</LinearLayout>
